<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD700">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to KKNLog!"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="72dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep track of your KKN journey in real time. Everything you need is right here â€” organized, updated, and easy to monitor."
            android:textColor="#000000"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="48dp"
            android:paddingHorizontal="16dp" />

        <!-- White Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_rounded"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Email -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_edittext_yellow_border"
                android:hint="Email"
                android:padding="12dp"
                android:textColor="#000"
                android:textColorHint="#888"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="24dp"
                android:inputType="textEmailAddress"
                android:fontFamily="sans-serif" />

            <!-- Password -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_edittext_yellow_border"
                android:hint="Password"
                android:padding="12dp"
                android:textColor="#000"
                android:textColorHint="#888"
                android:inputType="textPassword"
                android:fontFamily="sans-serif" />

            <!-- Login Button -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:text="Login"
                android:textSize="18dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:backgroundTint="#FFDA03"
                android:fontFamily="sans-serif"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_yellow"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
