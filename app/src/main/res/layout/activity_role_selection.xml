<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD700">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="#FFDA03"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to KKNLog!"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:gravity="center"/>

        <!-- Deskripsi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep track of your KKN journey in real time. Everything you need is right here â€” organized, updated, and easy to monitor."
            android:textColor="#000000"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="24dp"/>

        <!-- Card putih -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp"
            android:layout_gravity="center"
            android:backgroundTint="#FFFFFF"
            android:clipToOutline="true"
            android:background="@drawable/rounded_white_box">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose your role"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnLeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leader"
                android:textColor="#000000"
                android:backgroundTint="#FFDA03"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_button_yellow"/>

            <Button
                android:id="@+id/btnMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member"
                android:textColor="#000000"
                android:backgroundTint="#FFDA03"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_button_yellow" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
